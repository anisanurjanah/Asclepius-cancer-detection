<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Asclepius" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/prestige_blue</item>
        <item name="colorPrimaryVariant">@color/vermin_brown</item>
        <item name="colorOnPrimary">@color/super_silver</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/prestige_blue</item>
        <item name="colorSecondaryVariant">@color/vermin_brown</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Asclepius" parent="Base.Theme.Asclepius" />

    <style name="ToolbarTitleText" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarTitleTextHome" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/vermin_brown</item>
    </style>
</resources>